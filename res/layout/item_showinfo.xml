<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <ImageView
						    android:id="@+id/imageOfShowInfoItem"
						    android:layout_width="fill_parent"
						    android:layout_height="fill_parent"
						    android:layout_weight="3"
						    android:src="@drawable/placeholder_high"
						    android:scaleType="fitXY"
						     />
			    
			    <LinearLayout 
			        		android:layout_width="fill_parent"
			        		android:layout_height="wrap_content"
			        		android:layout_weight="1"
			        		android:orientation="vertical"
			        		android:padding="2dp"
			        		>

			        <TextView 
			            			    		android:id="@+id/titleOfShowInfoItem"
			            			    		android:layout_width="fill_parent"
			            			    		android:layout_height="wrap_content"
			            			    		android:text="testtiltle: testtiltle: testtiltle: testtiltle: testtiltle: testtiltle: testtiltle: "
			            			    		android:ellipsize="end"
			            			    		android:singleLine="true"
			            			    		style="@style/yanchu_item_title"
			            			    		/>
			        <LinearLayout
						            android:layout_width="fill_parent"
						            android:layout_height="wrap_content"
						            android:orientation="horizontal" 
						            >
						            
			            			<TextView 
			            			    		android:layout_width="wrap_content"
			            			    		android:layout_height="wrap_content"
			            			    		android:text="@string/str_theatre_item1"
			            			    		style="@style/yanchu_item_title2"
			            			    		/>
			            			<TextView 
			            			    		android:id="@+id/typeOfShowInfoItem"
			            			    		android:layout_width="wrap_content"
			            			    		android:layout_height="wrap_content"
			            			    		android:ellipsize="end"
			            			    		android:singleLine="true"
			            			    		style="@style/yanchu_item_title2"
			            			    		/>
			            			
			        </LinearLayout>
			          <LinearLayout
						            android:layout_width="fill_parent"
						            android:layout_height="wrap_content"
						            android:orientation="horizontal" 
						            >
						            
			            			<TextView 
			            			    		android:layout_width="wrap_content"
			            			    		android:layout_height="wrap_content"
			            			    		android:text="@string/str_theatre_item2"
			            			    		style="@style/yanchu_item_title2"
			            			    		/>
			            			<TextView 
			            			    		android:id="@+id/timeOfShowInfoItem"
			            			    		android:layout_width="wrap_content"
			            			    		android:layout_height="wrap_content"
			            			    		android:ellipsize="end"
			            			    		android:singleLine="true"
			            			    		style="@style/yanchu_item_title2"
			            			    		/>
			            			
			        </LinearLayout>
			         <LinearLayout
						            android:layout_width="fill_parent"
						            android:layout_height="wrap_content"
						            android:orientation="horizontal" 
						            >
						            
			            			<TextView 
			            			    		android:layout_width="wrap_content"
			            			    		android:layout_height="wrap_content"
			            			    		android:text="@string/str_theatre_item3"
			            			    		style="@style/yanchu_item_title2"
			            			    		/>
			            			<TextView 
			            			    		android:id="@+id/priceOfShowInfoItem"
			            			    		android:layout_width="wrap_content"
			            			    		android:layout_height="wrap_content"
			            			    		android:ellipsize="end"
			            			    		android:singleLine="true"
			            			    		style="@style/yanchu_item_title2"
			            			    		/>
			            			
			        </LinearLayout>
			    </LinearLayout>
</LinearLayout>

