<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    			xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical" 
			    android:focusable="false"
			    android:background="#cb6894"
			    >
		<include 	layout="@layout/header_home"
					android:layout_width="fill_parent"
					android:layout_height="50dp"
					/>
		<include 	
		    		android:id="@+id/progressbarOfHome"
		    		layout="@layout/progress_bar"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:visibility="gone"
					/>
		    		<RelativeLayout
		    			android:id="@+id/help_layout" 
		    			android:layout_width="fill_parent" 
		    			android:layout_height="150dp"
		    			android:focusable="false"
		    			android:background="#666666"
		 				>
				    <com.ssac.expro.kewen.view.SlowFlipGallery
				        						android:id="@+id/gallery" 
				        						android:layout_width="fill_parent" 
				        						android:layout_height="150dp" 
				        						/>
				   <LinearLayout 
				        		android:id="@+id/dot_linearlayout" 
				        		android:background="#55000000" 
				        		android:paddingBottom="1.0dip" 
				        		android:layout_width="fill_parent" 
				        		android:layout_height="20dp" 
				        		android:layout_alignParentBottom="true"
				        		>
				        <com.ssac.expro.kewen.view.NumberDotImageView 
				            				android:id="@+id/dot_imageview" 
				            				android:layout_width="fill_parent" 
				            				android:layout_height="wrap_content" 
				            				/>
				    </LinearLayout>
				</RelativeLayout>
		
		<LinearLayout 
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"
		    		android:orientation="vertical"
		    		android:layout_weight="1"
		    		>
					<LinearLayout 
					    		android:layout_width="match_parent"
					    		android:layout_height="match_parent"
					    		android:orientation="horizontal"
					    		android:layout_weight="1"
					    		android:padding="10dp"
					    		>
								<LinearLayout 
								    		android:id="@+id/linearYanChuOfHome"
								    		android:layout_width="fill_parent"
								    		android:layout_height="fill_parent"
								    		android:orientation="horizontal"
								    		android:layout_weight="1"
								    		android:background="@drawable/selector_yanchu"
								    		android:gravity="center"
								    		>
										<ImageView
										    		android:layout_width="fill_parent"
										    		android:layout_height="fill_parent"
										    		android:src="@drawable/img_home_yanchu"
										    		android:layout_weight="1"
										    		android:scaleType="fitXY"
										    		/>
										<TextView 
										    		android:layout_width="fill_parent"
										    		android:layout_height="fill_parent"
										    		android:layout_weight="3"
								    				android:gravity="center"
										    		android:text="@string/str_home_yanchu"
										    		android:textSize="17sp"
										    		android:textColor="#FFFFFF"
										    		android:textStyle="bold"
										    		/>
								</LinearLayout>
					    		
					</LinearLayout>
					<LinearLayout 
					    		android:layout_width="match_parent"
					    		android:layout_height="match_parent"
					    		android:orientation="horizontal"
					    		android:layout_weight="1"
					    		android:padding="10dp"
					    		>
								<LinearLayout 
								    		android:id="@+id/linearDianYingOfHome"
								    		android:layout_width="fill_parent"
								    		android:layout_height="fill_parent"
								    		android:orientation="horizontal"
								    		android:layout_weight="1"
								    		android:background="@drawable/selector_dianying"
								    		android:gravity="center"
								    		>
										
										<ImageView
										    		android:layout_width="fill_parent"
										    		android:layout_height="fill_parent"
										    		android:src="@drawable/img_home_film"
										    		android:layout_weight="1"
										    		android:scaleType="fitXY"
										    		/>
										<TextView 
										    		android:layout_width="fill_parent"
										    		android:layout_height="fill_parent"
										    		android:layout_weight="3"
								    				android:gravity="center"
										    		android:text="@string/str_home_dianying"
										    		android:textSize="17sp"
										    		android:textColor="#FFFFFF"
										    		android:textStyle="bold"
										    		/>
								</LinearLayout>
					    		
					</LinearLayout>
					<LinearLayout 
					    		android:layout_width="match_parent"
					    		android:layout_height="match_parent"
					    		android:orientation="horizontal"
					    		android:layout_weight="1"
					    		android:padding="10dp"
					    		>
								<LinearLayout 
								    		android:id="@+id/linearYiTanOfHome"
								    		android:layout_width="fill_parent"
								    		android:layout_height="fill_parent"
								    		android:orientation="horizontal"
								    		android:background="@drawable/selector_yitan"
								    		>
										<ImageView 
										    		android:layout_width="fill_parent"
										    		android:layout_height="fill_parent"
										    		android:src="@drawable/img_home_yitan"
										    		android:layout_weight="1"
										    		android:scaleType="fitXY"
										    		/>
										<TextView 
										    		android:layout_width="fill_parent"
										    		android:layout_height="fill_parent"
										    		android:layout_weight="3"
								    				android:gravity="center"
										    		android:text="@string/str_home_jinjihu2"
										    		android:textSize="17sp"
										    		android:textColor="#FFFFFF"
										    		android:textStyle="bold"
										    		/>
								</LinearLayout>
					    		
					</LinearLayout>
		    
		</LinearLayout>

	
  		<include 	layout="@layout/footer"
					android:layout_width="fill_parent"
					android:layout_height="60dp"
					/>
</LinearLayout>