<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/imgHeaderIconOfSinaWeiboItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:scaleType="fitCenter"
        android:src="@drawable/weibo_header_icon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="2dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weibo_top">
            <TextView
                android:id="@+id/textTitleOfSinaWeiboItem"
                style="@style/yanchu_item_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title" 
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weibo_middle"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textContentOfSinaWeiboItem"
                style="@style/yanchu_item_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright" 
                android:textSize="15sp"
                android:padding="10dp"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgDescriptionOfSinaWeiboItem"
                android:padding="10dp"
               	/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weibo_bottom" />
        
    </LinearLayout>

</LinearLayout>