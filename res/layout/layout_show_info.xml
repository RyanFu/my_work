<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
		    xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="#FFFFFF"
			>
		<RelativeLayout 
    			android:orientation="vertical" 
    			android:layout_width="fill_parent" 
    			android:layout_height="150dp"
    			android:layout_marginBottom="15dp"
    			android:background="#666666"
 				>
		    <com.ssac.expro.kewen.view.SlowFlipGallery
		        						android:id="@+id/galleryOfShowInfo" 
		        						android:layout_width="fill_parent" 
		        						android:layout_height="150dp" 
		        						/>
		    <LinearLayout 
		        		android:id="@+id/dot_linearlayout" 
		        		android:background="#55000000" 
		        		android:paddingBottom="1.0dip" 
		        		android:layout_width="fill_parent" 
		        		android:layout_height="20dp" 
		        		android:layout_alignParentBottom="true"
		        		>
		        <com.ssac.expro.kewen.view.NumberDotImageView 
		            				android:id="@+id/dot_imageviewOfShowInfo" 
		            				android:layout_width="fill_parent" 
		            				android:layout_height="wrap_content" 
		            				/>
		    </LinearLayout>
		</RelativeLayout> 	
		<include
		        android:id="@+id/progressbarOfShowInfo"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        layout="@layout/myprogress"
		        />	 
 		<ListView 
 		    		android:id="@+id/listviewOfShowInfo"
 		    		android:layout_width="fill_parent"
 		    		android:layout_height="fill_parent"
 		    		android:cacheColorHint="#FFFFFF"
 		    		android:divider="@drawable/divider_horizontal_timeline"
 		    		/>
	
</LinearLayout>